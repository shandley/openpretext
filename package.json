{
  "name": "openpretext",
  "version": "0.1.0",
  "description": "Modern web-based Hi-C contact map viewer and genome curation tool",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:visual": "playwright test",
    "test:coverage": "vitest run --coverage",
    "bench:acquire": "npx tsx bench/acquire/cli.ts",
    "bench:run": "npx tsx bench/cli.ts run",
    "bench:sweep": "npx tsx bench/cli.ts sweep",
    "bench:regression": "npx tsx bench/cli.ts regression",
    "bench:extract-ground-truth": "npx tsx bench/extract-lesson-ground-truth.ts"
  },
  "dependencies": {
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.1",
    "@types/pako": "^2.0.3",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
